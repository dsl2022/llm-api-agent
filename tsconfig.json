{
    "compilerOptions": {
      "module": "commonjs",
      "declaration": true,
      "removeComments": true,
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "target": "es2017",
      "sourceMap": false,
      "outDir": "./dist",
      "baseUrl": "./",
      "incremental": true,
      "paths": {
        "@/*": ["/src/*"],
        "@utils/*": ["src/utils/*"],
        "@prompts/*": ["src/prompts/*"]     
      }
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "test", "lib", "**/*spec.ts"]
  }